# Compatible with DataTables (https://datatables.net).
if @<%= singular_table_name %>.errors.any?
  json.api_errors! '<%= singular_table_name %>', @<%= singular_table_name %>.errors
else
  json.data do
    json.array! [ @<%= singular_table_name %> ] do |<%= singular_table_name %>|
      json.partial! '<%= plural_table_name %>/details', locals: { <%= singular_table_name %>: <%= singular_table_name %> }
    end
  end
end
