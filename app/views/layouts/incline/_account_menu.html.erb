<% if logged_in? -%>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"><%= current_user.name %></a>
      <ul class="dropdown-menu">
        <% if current_user.admin? %>

            <li class="divider"></li>
        <% end %>
        <li><%= link_to 'Log out', '#', method: :delete %></li>
      </ul>
    </li>
<% else -%>
    <li><%= link_to 'Log in', '#' %></li>
<% end -%>
